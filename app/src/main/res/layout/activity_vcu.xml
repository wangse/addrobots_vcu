<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:columnCount="6"
	android:rowCount="20"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.addrobots.vehiclecontrol.VcuActivity">

	<Button
		android:id="@+id/usb_test_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_columnSpan="2"
		android:layout_rowSpan="1"
		android:text="@string/usb_test_button"/>

	<Button
		android:id="@+id/usb_connect_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_columnSpan="2"
		android:layout_rowSpan="1"
		android:text="@string/usb_connect_button"/>

	<Button
		android:id="@+id/usb_send_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_columnSpan="2"
		android:layout_rowSpan="1"
		android:text="@string/usb_send_button"/>

	<ScrollView
		android:id="@+id/usb_info_scrollview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_columnSpan="2"
		android:layout_rowSpan="15"
		android:scrollbars="vertical">

		<TextView
			android:id="@+id/usb_info_textview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/usb_info_textview"/>

	</ScrollView>

	<ScrollView
		android:id="@+id/usb_session_scrollview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_columnSpan="2"
		android:layout_rowSpan="15"
		android:scrollbars="vertical"
		android:layout_column="3">

		<TextView
			android:id="@+id/usb_session_textview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/usb_session_textview"/>

	</ScrollView>
</GridLayout>
